@startuml
class Report {
  +reportID: int
  +title: string
  +type: string
  +dateGenerated: Date
  --
  +generateReport()
  +export(format: string)
}

class FinancialReport {
  +totalRevenue: float
  +totalExpenses: float
  +netProfit: float
  --
  +calculateFinancials()
}

class HRReport {
  +employeeCount: int
  +turnoverRate: float
  +trainingHours: int
  --
  +summarizeHRData()
}

class InventoryReport {
  +stockLevel: int
  +lowStockItems: int
  +valuation: float
  --
  +summarizeInventory()
}

class Scheduler {
  +scheduleID: int
  +frequency: string
  +nextRun: Date
  --
  +scheduleReport()
}

Report <|-- FinancialReport
Report <|-- HRReport
Report <|-- InventoryReport
Scheduler "1" -- "many" Report
@enduml
