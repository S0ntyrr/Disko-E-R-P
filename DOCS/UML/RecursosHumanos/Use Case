@startuml
actor Admin
actor "HR Manager" as Manager
actor Employee

rectangle "HR Module" {
  usecase "Register Employee" as UC1
  usecase "Edit/Remove Employee" as UC2
  usecase "Track Attendance" as UC3
  usecase "Generate Payroll" as UC4
  usecase "View Attendance Reports" as UC5
}

Admin --> UC1
Admin --> UC2
Manager --> UC4
Manager --> UC5
Employee --> UC3
@enduml
