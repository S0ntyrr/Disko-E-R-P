@startuml
class Cliente {
  +idCliente : int
  +nombre : String
  +email : String
  +telefono : String
  +crear()
  +leer()
  +actualizar()
  +eliminar()
}

class Reserva {
  +idReserva : int
  +fecha : Date
  +numPersonas : int
  +crear()
  +leer()
  +actualizar()
  +eliminar()
}

class Mesa {
  +idMesa : int
  +ubicacion : String
  +capacidad : int
  +crear()
  +leer()
  +actualizar()
  +eliminar()
}

class Empleado {
  +idEmpleado : int
  +nombre : String
  +rol : String
  +salario : double
  +crear()
  +leer()
  +actualizar()
  +eliminar()
}

class Evento {
  +idEvento : int
  +nombre : String
  +fecha : Date
  +DJ : String
  +crear()
  +leer()
  +actualizar()
  +eliminar()
}

class Consumo {
  +idConsumo : int
  +descripcion : String
  +precio : double
  +crear()
  +leer()
  +actualizar()
  +eliminar()
}

Cliente "1" -- "0..*" Reserva
Reserva "1" -- "1" Mesa
Empleado "1" -- "0..*" Reserva
Evento "1" -- "0..*" Reserva
Cliente "1" -- "0..*" Consumo
@enduml
