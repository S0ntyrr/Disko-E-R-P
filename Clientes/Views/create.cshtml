@model Cliente
<h2>Crear Cliente</h2>
<form asp-action="Create" method="post">
    <label>Nombre Completo:</label>
    <input asp-for="NombreCompleto" /><br />
    <label>Email:</label>
    <input asp-for="Email" /><br />
    <label>Teléfono:</label>
    <input asp-for="Telefono" /><br />
    <label>Dirección:</label>
    <input asp-for="Direccion" /><br />
    <label>Activo:</label>
    <input asp-for="Activo" type="checkbox" /><br />
    <button type="submit">Guardar</button>
</form>