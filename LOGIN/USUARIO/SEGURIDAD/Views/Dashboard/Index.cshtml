@{
    ViewData["Title"] = "Dashboard - Disko ERP";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .dashboard-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 20px 0;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        }
        .welcome-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 40px;
            margin: 30px 0;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        }
        .feature-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            transition: transform 0.3s ease;
            height: 100%;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        .feature-card:hover {
            transform: translateY(-5px);
        }
        .feature-icon {
            font-size: 48px;
            background: linear-gradient(135deg, #7C3AED, #EC4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
        }
        .btn-logout {
            background: linear-gradient(135deg, #EF4444, #DC2626);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            transition: all 0.3s ease;
        }
        .btn-logout:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="dashboard-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="mb-0">
                        <i class="fas fa-music text-primary"></i>
                        Disko ERP
                    </h1>
                </div>
                <div class="col-md-6 text-end">
                    <span class="me-3">
                        <i class="fas fa-user-circle"></i>
                        Bienvenido, <strong>Administrador Demo</strong>
                    </span>
                    <a href="/Auth/Logout" class="btn btn-logout">
                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Mensaje de bienvenida -->
        <div class="welcome-card">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="text-primary mb-3">
                        <i class="fas fa-star"></i>
                        ¡Bienvenido al Dashboard de Disko ERP!
                    </h2>
                    <p class="lead">
                        Has iniciado sesión exitosamente en el sistema de gestión para discotecas.
                        Desde aquí podrás administrar todos los aspectos de tu negocio.
                    </p>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        <strong>Estado del Sistema:</strong> Operativo
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="logo-container">
                        <i class="fas fa-music" style="font-size: 80px; color: #7C3AED;"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Características del sistema -->
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4>Control de Aforo</h4>
                    <p>Gestiona el control de entrada y aforo de tu discoteca en tiempo real.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cash-register"></i>
                    </div>
                    <h4>Punto de Venta</h4>
                    <p>Sistema integrado de ventas para barras, reservaciones y eventos especiales.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <h4>Reportes</h4>
                    <p>Estadísticas detalladas y reportes de ventas, asistencia y rentabilidad.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-crown"></i>
                    </div>
                    <h4>Zona VIP</h4>
                    <p>Gestión de reservaciones VIP, mesas premium y servicios exclusivos.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-boxes"></i>
                    </div>
                    <h4>Inventario</h4>
                    <p>Control de stock de bebidas, suministros y equipos de la discoteca.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <h4>Personal</h4>
                    <p>Gestión de empleados, horarios, roles y control de acceso al sistema.</p>
                </div>
            </div>
        </div>

        <!-- Información adicional -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="welcome-card">
                    <h3><i class="fas fa-info-circle text-info"></i> Información del Sistema</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Versión:</strong> 1.0.0</p>
                            <p><strong>Usuario:</strong> admin</p>
                            <p><strong>Rol:</strong> Administrador</p>
                            <p><strong>Último acceso:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Estado de la sesión:</strong> <span class="badge bg-success">Activa</span></p>
                            <p><strong>Permisos:</strong> Acceso completo al sistema</p>
                            <p><strong>IP de conexión:</strong> 127.0.0.1</p>
                            <p><strong>Navegador:</strong> Detectado automáticamente</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Nueva sección: Dashboard -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="welcome-card">
                    <h2>Dashboard</h2>
                    <ul>
                        <li>Gestión de empleados</li>
                        <li>Facturación</li>
                        <li>Inventario</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
